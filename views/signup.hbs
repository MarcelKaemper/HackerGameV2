<h1>{{title}}</h1>
{{#if message}}
<p>{{message}}</p>
{{/if}}
{{#unless loggedIn}}
<form action="signup" method="post" class="form_signup">
	Email:
	<br />
	<input type="email" name="mail" required size="22" autocomplete="off">
	<br />
	Username:
	<br />
	<input type="text" name="username" required size="22" autocomplete="off">
	<br />
	Password:
	<br />
	<input type="password" name="password" required size="22">
	<br />
	Confirm password:
	<br />
	<input type="password" name="confirmPassword" size="22">
	<br />
	<button type="submit">Submit</button>
</form>
{{else}}
<p>Logged in</p>
{{/unless}}
